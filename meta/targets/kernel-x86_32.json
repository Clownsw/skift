{
    "id": "hjert-x86_32",
    "type": "target",
    "props": {
        "toolchain": "clang",
        "arch": "x86_32",
        "sys": "hjert",
        "abi": "sysv",
        "encoding": "utf8",
        "freestanding": true,
        "host": false,

        "karm-sys-encoding": "utf8",
        "karm-cli-backend": "ansi"
    },
    "tools": {
        "cc": {
            "cmd": "clang",
            "args": [
                "-target",
                "i386-none-elf",
                "-ffreestanding",
                "-fno-stack-protector"
            ]
        },
        "cxx": {
            "cmd": "clang++",
            "args": [
                "-target",
                "i386-none-elf",
                "-ffreestanding",
                "-fno-stack-protector"
            ]
        },
        "ld": {
            "cmd": "clang++",
            "args": [
                "-target",
                "i386-none-elf",
                "-ffreestanding",
                "-no-stdlib"
            ]
        },
        "ar": {
            "cmd": "llvm-ar",
            "args": [
                "rcs"
            ]
        },
        "as": {
            "cmd": "nasm",
            "args": [
                "-f",
                "elf32"
            ]
        }
    }
}
