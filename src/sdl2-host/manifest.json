{
    "id": "sdl2-host",
    "type": "lib",
    "provide" : [
        "sdl2"
    ],
    "requires": {
        "host": [
            true
        ]
    },
    "tools": {
        "cc": {
            "args": ["@exec", "pkg-config", "--cflags", "sdl2"]
        },
        "cxx": {
            "args": ["@exec", "pkg-config", "--cflags", "sdl2"]
        },
        "ld": {
            "args": ["@exec", "pkg-config", "--libs", "sdl2"]
        }
    }
}
